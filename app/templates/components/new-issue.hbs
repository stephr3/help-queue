<form>
  <div class="form-group">
    {{input value=name id="name" placeholder="Please enter your name" class="form-control"}}
  </div>
  <div class="form-group">
    {{input value=location id="location" placeholder="Please enter your location" class="form-control"}}
  </div>
  <div class="form-group">
    {{textarea rows="6" cols="60" value=description id="description" placeholder="Give a brief description of issue you are having." class="form-control"}}
  </div>
  <button class="btn pull-right" {{action 'save'}}>Help!</button>
</form>
